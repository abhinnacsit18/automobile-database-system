@{
    ViewBag.Title = "Categories";
}
<div>
    <div class="flex flex-direction-vertical">
        <a asp-controller = "Category" asp-action = "Create" class="flex-centre-horizontal">
            <button>
                Add a new automobile category
            </button>
        </a>
        
        <div class="flex-centre-horizontal">
            <table>
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                </tr>
                <tr>
                    <td>
                        Cruiser
                    </td>
                    <td>
                        2 wheeler
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="1">
                            <button>
                                Edit
                            </button>
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>
                        Saloon
                    </td>
                    <td>
                        4 wheeler
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="2">
                            <button>
                                Edit
                            </button>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
</div>